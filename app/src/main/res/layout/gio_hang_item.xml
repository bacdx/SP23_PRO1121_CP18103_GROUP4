<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_31__1_"
            android:id="@+id/giohang_imgMon"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/giohang_tvTenMon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá tiền"
                android:textStyle="bold"
                android:id="@+id/giohang_tvGiaTien"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_remove_24_sub_gio_hang"
                        android:padding="5dp"
                        android:background="@drawable/shape"
                        android:id="@+id/giohang_imgSub"
                        />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/shape"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:id="@+id/giohang_tvSoLuong"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/shape"
                    android:src="@drawable/ic_baseline_add_24_add"
                    android:id="@+id/giohang_imgAdd"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>